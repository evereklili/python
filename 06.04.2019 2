import fibo #fibo.py isimlik kendi yazdığım dosyayı çağırıyorum. 
import sys #sys sistem dosyasından ihraç etti. 

print(fibo.fib(5))

print("")

print("Dosya ismi:"+sys.argv[0])
print(fibo.fib2(int(sys.argv[1])))
 

